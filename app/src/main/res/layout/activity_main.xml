<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background_color"
    tools:context=".User.Activities.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear"
        android:layout_above="@id/bottom_nav"/>

    <com.tbuonomo.morphbottomnavigation.MorphBottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/green_dark"
        app:menu="@menu/bottom"
        app:itemTextColor="@color/white"
        app:itemRippleColor="@color/white"
        app:itemIconTint="@color/white"
        style="@style/Widget.Design.BottomNavigationView"
        app:morphItemRadius="@dimen/_64sdp"
        app:morphVerticalOffset="@dimen/_8sdp"
        app:morphCornerRadius="@dimen/_128sdp"/>

</RelativeLayout>